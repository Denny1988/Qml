<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:background="#ffffff"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<TextView
    android:id="@+id/header_tv"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="#ffcf0000"
    android:textSize="20dp"
    android:textStyle="bold"
    android:gravity="center"
    android:textColor="#ffffff"
    android:text="微信授权页面"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/button_moreoverflow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="ic_wechat"
        android:src="@drawable/ic_wechat"/>

    <TextView
        android:id="@+id/wechat_tv"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#202020"
        android:text="将获取您的公开信息（昵称，头像等），请确认本人操作"/>

</LinearLayout>

<Button
    android:id="@+id/button_one"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/btn_style_one"
    android:textColor="#ffffff"
    android:layout_margin="10dp"
    android:text="确认微信授权"/>

<Button
    android:id="@+id/button_two"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/btn_style_two"
    android:textColor="#ffffff"
    android:layout_margin="10dp"
    android:text="取消授权"/>

</LinearLayout>
