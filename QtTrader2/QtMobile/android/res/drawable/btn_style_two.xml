<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- 定义当button 处于pressed 状态时的形态。 -->
<shape>
            <solid android:color="#CC2845" />

            <stroke android:width="1dp" android:color="#000000" />

            <corners android:radius="8dp" />
        </shape></item>
    <item android:state_enabled="false"> <!-- 定义当button disable时的形态 -->
<shape>
            <solid android:color="#808080" />

            <stroke android:width="2dp" android:color="#333333" />

            <corners android:radius="8dp" />
        </shape></item>
    <item> <!-- 定义形态 -->
<shape>
            <gradient android:angle="-90" android:endColor="#df2222" android:startColor="#df0000" />

            <stroke android:width="1dp" android:color="#333333" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>
